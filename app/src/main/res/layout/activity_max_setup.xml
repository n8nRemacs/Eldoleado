<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/gray_light"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Настройка MAX"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- QR Code Step -->
            <LinearLayout
                android:id="@+id/stepQrCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Отсканируйте QR-код"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="1. Откройте MAX (VK Teams) на этом телефоне\n2. Профиль → Настройки → Устройства\n3. Нажмите «Добавить устройство»\n4. Отсканируйте QR-код ниже"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="4dp" />

                <!-- QR Code Container -->
                <FrameLayout
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_input_field">

                    <ImageView
                        android:id="@+id/qrCodeImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:scaleType="fitCenter" />

                    <ProgressBar
                        android:id="@+id/qrLoading"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/qrError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Ошибка загрузки QR"
                        android:textColor="@color/status_error"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ожидание сканирования..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <Button
                    android:id="@+id/btnRefreshQr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Обновить QR-код"
                    android:backgroundTint="@color/channel_max"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- Success State -->
            <LinearLayout
                android:id="@+id/stepSuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="48dp"
                    android:src="@drawable/ic_max"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="MAX подключен!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_status" />

                <TextView
                    android:id="@+id/successUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="user@mail.ru"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/successName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Иван Петров"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <Button
                    android:id="@+id/btnDone"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:text="Готово"
                    android:backgroundTint="@color/green_status"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
